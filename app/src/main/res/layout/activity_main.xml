<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F8F9EB"
    tools:context="com.orshoham.statsme.MainActivity">

    <AutoCompleteTextView
        android:id="@+id/usernameID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passwordID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#5A5F37"
        android:ems="10"
        android:hint="ENTER  YOUR  EMAIL..."
        android:textSize="17.5dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/color1"
        android:textColorHighlight="#5A5F37"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSelectHandle="@drawable/color_cursor"
        android:textSelectHandleLeft="@drawable/color_cursor"
        android:textSelectHandleRight="@drawable/color_cursor" />

    <EditText
        android:id="@+id/passwordID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:backgroundTint="#5A5F37"
        android:ems="10"
        android:hint="ENTER YOUR PASSWORD...  "
        android:inputType="textPassword"
        android:textColor="@color/color1"
        android:textColorHighlight="#5A5F37"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSelectHandle="@drawable/color_cursor"
        android:textSelectHandleLeft="@drawable/color_cursor"
        android:textSelectHandleRight="@drawable/color_cursor" />

    <Button
        android:text="Sign Up"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@color/color1"
        android:onClick="signUp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="45dp"
        android:layout_below="@+id/usernameID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/signBtnID" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/big_logo" />

    <Button
        android:text="Login"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signBtnID"
        android:layout_below="@id/passwordID"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:onClick="login"
        android:background="@color/color2"
        android:textColor="#FFFFFF"
        android:id="@+id/loginID" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/googleSignupID"
        android:layout_marginLeft="50dp"
        app:srcCompat="@drawable/googlesignup" />

    <Button
        android:id="@+id/googleSignupID"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="100dp"
        android:background="#DF4A32"
        android:text="Sign in with Google"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:srcCompat="@drawable/googlesignup" />

    <Button
        android:id="@+id/facebookSignupID"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_below="@+id/signBtnID"
        android:layout_marginLeft="100dp"
        android:background="#39579A"
        android:layout_marginTop="192dp"
        android:text="Sign in with Facebook"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/googleSignupID"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        app:srcCompat="@drawable/facebook" />


</RelativeLayout>
