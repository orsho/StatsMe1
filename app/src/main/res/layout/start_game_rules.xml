<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.orshoham.statsme.StartActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color3"
        android:columnCount="2"
        android:rowCount="8"
        android:layout_alignParentTop="true"
        android:id="@+id/linear">

        <TextView
            android:id="@+id/beforeBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:text="SETUP YOUR RULES:"
            android:textColor="@color/color1"
            android:textSize="25sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="NUMBER OF SETS:"
            android:layout_marginTop="13dp"
            android:textSize="17sp"
            android:textColor="@color/color1"
            android:layout_marginLeft="22dp"
            android:layout_column="0"
            android:layout_row="1"/>

        <TextView
            android:id="@+id/games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMBEROF GAMES:"
            android:layout_marginTop="13dp"
            android:textSize="17sp"
            android:textColor="@color/color1"
            android:layout_marginLeft="22dp"
            android:layout_column="0"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/tiebreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIEBREAK RULES:"
            android:layout_marginTop="13dp"
            android:textSize="17sp"
            android:textColor="@color/color1"
            android:layout_marginLeft="22dp"
            android:layout_column="0"
            android:layout_row="3"/>

        <TextView
            android:id="@+id/advantage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADVANTAGE RULES:"
            android:layout_marginTop="13dp"
            android:textSize="17sp"
            android:textColor="@color/color1"
            android:layout_marginLeft="22dp"
            android:layout_column="0"
            android:layout_row="4"/>

        <TextView
            android:id="@+id/court"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADVANTAGE RULES:"
            android:layout_marginTop="13dp"
            android:textSize="17sp"
            android:textColor="@color/color1"
            android:layout_marginLeft="22dp"
            android:layout_column="0"
            android:layout_row="5"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear"
        android:background="@color/color3">

        <Button
            android:id="@+id/startButtonId"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:onClick="startGameLive"
            android:background="@drawable/buttonshapestartgame"
            android:text="GO!" />
    </LinearLayout>

</RelativeLayout>